<!DOCTYPE html>
<% include ./header %>
<html>
<title>查詢存貨</title>

<link href="/stylesheets/main.css" rel="stylesheet">

<link href="/stylesheets/sidebar.css" rel="stylesheet">

<body>
<div id="wrapper">
    <!-- Sidebar -->

    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">查詢存貨</h1>
                </div>
            </div>

        </div>
        <table>
            <tr>

                <th>No</th>
                <th>原料名稱</th>
                <th>原料價格</th>
                <th>現有存貨</th>
                <th width=100px>警示指標</th>
            </tr>
            <% if(Materials){
            for(var i = 0;i < Materials.length;i++) {%>
            <td></td>
            <tr>
                <td><%=Materials[i].Material_ID%></td>
                <td><%=Materials[i].Name%></td>
                <td><%=Materials[i].Price%></td>
                <td><%=Materials[i].Stock%></td>
                    <% if(Materials[i].Stock < Materials[i].Alert_Value){ %>
                        <td><%=Materials[i].Name%>需要補貨</td>
                    <%}else{ %>
                        <td><%=Materials[i].Name%>不需要補貨</td>
                    <%}%>
            </tr>
            <% }
            }else{ %>
            <tr>
                <td colspan="5" >查無結果</td>
            </tr>
            <% } %>
        </table>
    </div>
</div>
</body>
</html>
